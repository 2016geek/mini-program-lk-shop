.customMade
  .container
    background-color #30384C
    padding-top 750rpx
    display flex
    flex-direction column
    align-items center
    .title
      font-size 72rpx
      line-height 76rpx
      color #ffffff
      font-weight 500
      margin-bottom 10rpx
    .tips
      font-size 28rpx
      line-height 76rpx
      color #EFEFF6
      font-weight 500
    .arrow
      width 32rpx
      height 39rpx
      margin 48rpx 87rpx
    .product-list
      white-space: nowrap;
      display: inline-block;
      .product-list-wrapper
        display: inline-block
        .product-list-inline
          padding-bottom 120rpx
          padding-right: 48rpx
          display flex
          flex-direction row
          align-items center
          .product-item
            display flex
            flex-direction column
            align-items center
            width 410rpx
            margin-left: 48rpx
            .product-image-wrapper
              position relative
              width 100%
              height 559rpx
              .product-image
                position absolute
                top 0
                left 0
                width 100%
                height 100%
              .product-edit
                width 64rpx
                height 64rpx
                position absolute
                top 16rpx
                right 16rpx
            .product-name
              font-size 36rpx
              line-height 50rpx
              color #ffffff
              font-weight 500
              margin 24rpx 0 8rpx
            .product-desc
              font-size 20rpx
              line-height 28rpx
              color #7E80A3
              font-weight 500
  .aboutUs
    display: flex
    flex-direction: column
    align-items: center
    padding-top: 86rpx
    .lk-icon
      width 99rpx
      height 15rpx
    .about-lk
      font-size: 54rpx
      line-height 72rpx
      color: #232442
      font-weight: 400
      margin: 29rpx 0
    .about-tips
      font-size: 21rpx
      line-height 39rpx
      color: #232442
      font-weight: 400
    .about-footer
      margin: 68rpx 0 128rpx
      width: 657rpx
      height: 34rpx
