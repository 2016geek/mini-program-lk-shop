.bill-edit
  background-color #EFEFF6
  padding-bottom 148rpx
  padding-bottom calc(148rpx + constant(safe-area-inset-bottom))
  padding-bottom calc(148rpx + env(safe-area-inset-bottom))
  .creator-wrapper
    height 72rpx
    display flex
    align-items: center
    justify-content: center
    background-color: #EAEBFF
    .portrait
      width: 32rpx
      height 32rpx
      margin-right 16rpx
    .desc
      font-size 28rpx
      color: #7E80A3
  .untap-modal
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 1000
  &.disabled
    .tag-item.active
      background-color #7E80A3 !important
    .picker,.input,.number,.unit,.total-input
      color #7E80A3 !important

  .img-list
    padding 48rpx
    display flex
    background-color #fff
    position relative
    z-index 999
    .img-wrapper
      width 178rpx
      height 178rpx
      position relative
      margin-right 20rpx
      .icon-close
        position absolute
        top -16rpx
        right -16rpx
        width 32rpx
        height 32rpx
        background center / 32rpx 32rpx no-repeat
        background-image url('https://hzliangke.oss-cn-hangzhou.aliyuncs.com/miniapp/local/billEdit/%E5%88%A0%E9%99%A4%402x.png')
      .img
        width 178rpx
        height 178rpx
    .add-img
      display flex
      flex-direction column
      justify-content center
      align-content center
      background-color #EFEFF6
      width 178rpx
      height 178rpx
      .icon-photo
        width 47rpx
        height 47rpx
        align-self center
        background center / 47rpx 47rpx no-repeat url('https://hzliangke.oss-cn-hangzhou.aliyuncs.com/miniapp/local/billEdit/%E5%BD%A2%E7%8A%B6%402x.png')
      .desc
        font-size 32rpx
        color #7E80A3
        margin-top 24rpx
        line-height 1
        text-align center
  .part
    padding 48rpx
    border-top 1rpx dashed #D1D2DC
    background-color #fff
    .title-wrapper
      display flex
      justify-content space-between
      align-content center
      .title
        display flex
        align-items center
        color #232442
        font-size 36rpx
        font-weight bolder
        &::before
          content ''
          background-color #3432C1
          display inline-block
          width 8rpx
          height 36rpx
          margin-right 16rpx
      .other
        text-align right
        display flex
        align-items center
        .add
          font-size 36rpx
          color #A9ABBE
          padding-left 28rpx
          background left center / 20rpx 20rpx no-repeat
          font-weight bolder
          background-image url('https://hzliangke.oss-cn-hangzhou.aliyuncs.com/miniapp/local/billEdit/形状@2x(1).png')
        .bill-date-wrapper
          width 468rpx
          height 50rpx
          .picker
            font-size 36rpx
            color #F89D4A
            font-weight bolder
        .input
          color #232442
          font-size 36rpx
          font-weight bolder
          width 468rpx
          vertical-align middle
    .tag-list
      max-height 228rpx
      margin-top 8rpx
      display flex
      flex-wrap wrap
      overflow auto
      .tag-item
        padding 20rpx 42rpx
        background-color #EFEFF6
        color #A9ABBE
        font-size 36rpx
        font-weight bolder
        margin-right 24rpx
        margin-top 24rpx
        position relative
        .icon-close
          position absolute
          top -16rpx
          right -16rpx
          width 32rpx
          height 32rpx
          background center / 32rpx 32rpx no-repeat
          background-image url('https://hzliangke.oss-cn-hangzhou.aliyuncs.com/miniapp/local/billEdit/%E5%88%A0%E9%99%A4%402x.png')
        &.active
          color #ffffff
          background-color #3432C1
  .price-wrapper
    .row
      display flex
      flex-wrap wrap
      padding 44rpx 48rpx
      border-bottom 1rpx dashed #D1D2DC
      .input-item-wrapper
        &:last-child
          margin-bottom 0
        margin-bottom 32rpx
        width 100%
        display flex
        align-items center
        &:last-child
          .input-item
            margin-bottom 0
        .control-icon
          width 100rpx
          height 32rpx
          background center right / 32rpx 32rpx no-repeat
          &.add
            background-image url('https://hzliangke.oss-cn-hangzhou.aliyuncs.com/miniapp/local/billEdit/数量-增加 (1)@2x.png')
          &.reduce
            background-image url('https://hzliangke.oss-cn-hangzhou.aliyuncs.com/miniapp/local/billEdit/%E6%95%B0%E9%87%8F-%E5%87%8F%E5%B0%91%402x.png')
      .input-item
        flex 1
        display flex
        align-items center
        .edit-icon
          width 30rpx
          height 30rpx
          background center / 30rpx 30rpx no-repeat url('https://hzliangke.oss-cn-hangzhou.aliyuncs.com/miniapp/local/billEdit/pen%402x.png')
          margin-right 24rpx
        .label
          font-size 36rpx
          font-weight bolder
          margin-right 32rpx
        .input
          flex 1
          font-size 36rpx
          color #F89D4A
          font-weight bolder
    .row-other
      padding 48rpx
      .label
        font-size 36rpx
        font-weight bolder
        color #232442
      .total-wrapper
        width 100%
        flex 1
        display flex
        margin-top 24rpx
        .unit-wrapper
          width 47rpx
          display flex
          flex-direction column
          justify-content space-between
          .unit
            font-size 24rpx
            color #F89D4A
            font-weight bolder
          .dot-name
            font-size 24rpx
            font-weight bolder
            color #7E80A3
        .total-input
          margin-left 10rpx
          font-size 88rpx
          height 82rpx
          line-height 82rpx
          font-weight bolder
          color #F89D4A
          overflow visible
          flex 1
  .bottom-btn-group
    position fixed
    bottom 0
    left 0
    right 0
    width 100%
    z-index 10
    display flex
    padding-bottom constant(safe-area-inset-bottom) /* 兼容 iOS < 11.2 */
    padding-bottom env(safe-area-inset-bottom) /* 兼容 iOS >= 11.2 */
    .negative
      color #fff
