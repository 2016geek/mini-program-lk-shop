.welcome
  position relative
  width 100%
  height 100vh
  .top-part
    height calc(100vh - 486rpx)
    position relative
    .title-wrapper
      position absolute
      top 50%
      transform translateY(-50%)
      text-align center
      width 100%
      .title
        font-size 48rpx
        font-weight bolder
        color 232442
        margin-bottom 24rpx
        line-height 67rpx
        display block
      .slogan
        display block
        font-size 36rpx
        color #232442
  .icon-list
    bottom 356rpx
    display flex
    justify-content space-between
    position absolute
    width 100%
    padding 0 69rpx
    margin 0 auto
    box-sizing border-box
    height 135rpx
    .item
      flex 1
      text-align center
      position relative
      .image1
        width 60rpx
        height 63rpx
      .image2
        width 55rpx
        height 48rpx
      .image3
        width 48rpx
        height 48rpx
      .desc
        color #7E80A3
        font-size 36rpx
        position absolute
        bottom 0
        width 100%
        text-align center
        left 0
  .protrol
    text-align center
    position absolute
    bottom 196rpx
    width 100%
    .image
      vertical-align middle
      width 30rpx
      height 30rpx
      margin-right 12rpx
    .normal
      font-size 28rpx
      color #7E80A3
      vertical-align middle
    .highlight
      font-size 28rpx
      color #F89D4A
      vertical-align middle