.info
	padding-top: 388rpx

	&-container
		display: flex
		justify-content: center
		align-items: center
		flex-direction: column

	&-title
		color: #232442
		font-size: 48rpx
		font-weight: bold
		line-height: 67rpx

	&-desc
		font-size: 36rpx
		color: #232442
		line-height: 50rpx
		margin-top: 24rpx

	&-selection
		margin-top: 88rpx
		margin-left: 62rpx
		margin-right: 61rpx
		display: flex
		flex-wrap: wrap
		justify-content: space-between

		&-item
			width: 193rpx
			height 89rpx
			background-color: #EFEFF6
			color: #A9ABBE
			font-size: 26rpx
			font-weight: bold
			display: flex
			justify-content: center
			align-items: center
			margin-bottom: 24rpx

			&:nth-last-child(3)
			&:nth-last-child(2)
			&:nth-last-child(1)
				margin-bottom: 0

			&.active
				background-color: #3432C1
				color: #fff

	&-bottom
		width: 100%
		height: 148rpx
		background-color: #3432C1
		color: #ffffff
		font-size: 36rpx
		font-weight: bold
		display: flex
		justify-content: center
		align-items: center
		position: fixed
		left: 0
		bottom: 0
		bottom: constant(safe-area-inset-bottom) /* 兼容 iOS < 11.2 */
		bottom: env(safe-area-inset-bottom) /* 兼容 iOS >= 11.2 */
