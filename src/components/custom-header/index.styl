.custom-title-bar
  display: flex
  align-items: center
  width: 100%

  &.place
    position: relative

  &.operate
    position: absolute
    z-index: 1

  &.fixed
    position: fixed
    left: 0
    z-index: 500

.setting
  width: 32rpx
  height: 32rpx
  margin-left: 48rpx
  position relative
  &::after
    content ''
    position: absolute
    width: 64rpx
    height: 64rpx
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

  image
    width: 32rpx
    height: 32rpx

.back
  width: 48rpx
  height: 48rpx
  margin-left: 24rpx
  position relative
  &::after
    content ''
    position: absolute
    width: 96rpx
    height: 96rpx
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

  image
    width: 48rpx
    height: 48rpx

.close
  width: 28rpx
  height: 27rpx
  margin-left: 47rpx
  position relative
  &::after
    content ''
    position: absolute
    width: 96rpx
    height: 96rpx
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

  image
    width: 28rpx
    height: 27rpx
