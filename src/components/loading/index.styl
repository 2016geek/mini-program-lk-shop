$bg-color = #3432C1;
vendors = official

@keyframes lds-default {
	0%,
	20%,
	80%,
	100% {
		transform: scale(1);
	}

	50% {
		transform: scale(1.5);
	}
}

@keyframes lds-ellipsis1 {
	0% {
		transform: scale(0);
	}

	100% {
		transform: scale(1);
	}
}

@keyframes lds-ellipsis3 {
	0% {
		transform: scale(1);
	}

	100% {
		transform: scale(0);
	}
}

@keyframes lds-ellipsis2 {
	0% {
		transform: translate(0, 0);
	}

	100% {
		transform: translate(19rpx, 0);
	}
}

@keyframes lds-roller {
	0% {
		transform: rotate(0deg);
	}

	100% {
		transform: rotate(360deg);
	}
}

@keyframes lds-ripple {
	0% {
		top: 28rpx;
		left: 28rpx;
		width: 0;
		height: 0;
		opacity: 1;
	}

	100% {
		top: -1rpx;
		left: -1rpx;
		width: 58rpx;
		height: 58rpx;
		opacity: 0;
	}
}

.loading {
  display: block;
  position: relative;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;

  &.type1 {
    .item {
      position: absolute;
      width: 5rpx;
      height: 5rpx;
      background: $bg-color;
      border-radius: 50%;
      animation: lds-default 1.2s linear infinite;

      &:nth-child(1) {
        animation-delay: 0s;
        top: 29rpx;
        left: 53rpx;
      }

      &:nth-child(2) {
        animation-delay: -0.1s;
        top: 18rpx;
        left: 50rpx;
      }

      &:nth-child(3) {
        animation-delay: -0.2s;
        top: 9rpx;
        left: 41rpx;
      }

      &:nth-child(4) {
        animation-delay: -0.3s;
        top: 6rpx;
        left: 29rpx;
      }

      &:nth-child(5) {
        animation-delay: -0.4s;
        top: 9rpx;
        left: 18rpx;
      }

      &:nth-child(6) {
        animation-delay: -0.5s;
        top: 18rpx;
        left: 9rpx;
      }

      &:nth-child(7) {
        animation-delay: -0.6s;
        top: 29rpx;
        left: 6rpx;
      }

      &:nth-child(8) {
        animation-delay: -0.7s;
        top: 41rpx;
        left: 9rpx;
      }

      &:nth-child(9) {
        animation-delay: -0.8s;
        top: 50rpx;
        left: 18rpx;
      }

      &:nth-child(10) {
        animation-delay: -0.9s;
        top: 53rpx;
        left: 29rpx;
      }

      &:nth-child(11) {
        animation-delay: -1s;
        top: 50rpx;
        left: 41rpx;
      }

      &:nth-child(12) {
        animation-delay: -1.1s;
        top: 41rpx;
        left: 50rpx;
      }

    }
  }

  &.type2 {
    .item {
      position: absolute;
      top: 27rpx;
      width: 11rpx;
      height: 11rpx;
      border-radius: 50%;
      background: $bg-color;
      animation-timing-function: cubic-bezier(0, 1, 1, 0);


      &:nth-child(1) {
        left: 6rpx;
        animation: lds-ellipsis1 0.6s infinite;
      }

      &:nth-child(2) {
        left: 6rpx;
        animation: lds-ellipsis2 0.6s infinite;
      }

      &:nth-child(3) {
        left: 26rpx;
        animation: lds-ellipsis2 0.6s infinite;
      }

      &:nth-child(4) {
        left: 45rpx;
        animation: lds-ellipsis3 0.6s infinite;
      }
    }
  }

  &.type3 {
    .item {
      animation: lds-roller 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
      transform-origin: 32rpx 32rpx;

      &:after {
        content: " ";
        display: block;
        position: absolute;
        width: 6rpx;
        height: 6rpx;
        border-radius: 50%;
        background: $bg-color;
        margin: -3rpx 0 0 -3rpx;
      }

      &:nth-child(1) {
        animation-delay: -0.036s;
      }

      &:nth-child(1):after {
        top: 50rpx;
        left: 50rpx;
      }

      &:nth-child(2) {
        animation-delay: -0.072s;
      }

      &:nth-child(2):after {
        top: 54rpx;
        left: 45rpx;
      }

      &:nth-child(3) {
        animation-delay: -0.108s;
      }

      &:nth-child(3):after {
        top: 57rpx;
        left: 39rpx;
      }

      &:nth-child(4) {
        animation-delay: -0.144s;
      }

      &:nth-child(4):after {
        top: 58rpx;
        left: 32rpx;
      }

      &:nth-child(5) {
        animation-delay: -0.18s;
      }

      &:nth-child(5):after {
        top: 57rpx;
        left: 25rpx;
      }

      &:nth-child(6) {
        animation-delay: -0.216s;
      }

      &:nth-child(6):after {
        top: 54rpx;
        left: 19rpx;
      }

      &:nth-child(7) {
        animation-delay: -0.252s;
      }

      &:nth-child(7):after {
        top: 50rpx;
        left: 14rpx;
      }

      &:nth-child(8) {
        animation-delay: -0.288s;
      }

      &:nth-child(8):after {
        top: 45rpx;
        left: 10rpx;
      }
    }
  }

  &.type4 {
    .item {
      position: absolute;
      border: 4rpx solid $bg-color;
      opacity: 1;
      border-radius: 50%;
      animation: lds-ripple 1s cubic-bezier(0, 0.2, 0.8, 1) infinite;

      &:nth-child(2) {
        animation-delay: -0.5s;
      }
    }
  }

}