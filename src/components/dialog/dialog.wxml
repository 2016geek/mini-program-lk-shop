<view class="dialog" wx:if="{{visible}}">
  <view class="dialog-wrapper">
    <view class="header">
      <text bindtap="onClose" class="close"></text>
      <text class="title">{{title}}</text>
      <view class="confirm" bindtap="onConfirm">确定</view>
    </view>
    <slot></slot>
  </view>
  <view class="mask" bindtap="onClose"></view>
</view>
