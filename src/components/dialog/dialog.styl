.dialog
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  width 100%
  margin auto
  z-index 1000
  box-sizing border-box
  &-wrapper
    position absolute
    box-sizing border-box
    bottom 0
    width 100%
    background #ffffff
    z-index 10
    padding 48rpx
    .header
      display flex
      justify-content space-between
      align-items center
      margin-bottom 57rpx
      .close
        width 48rpx
        height 48rpx
        background center / 36rpx 36rpx no-repeat url('https://hzliangke.oss-cn-hangzhou.aliyuncs.com/miniapp/local/billEdit/close%402x.png')
      .title
        color #232442
        font-size 36rpx
        font-weight bolder
      .confirm
        font-size 34rpx
        color #3432C1
        font-weight bolder
  .mask
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background rgba(35, 36, 66, 0.5)
    z-index 1
